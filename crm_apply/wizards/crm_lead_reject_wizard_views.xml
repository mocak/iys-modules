<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Form Views -->

    <record id="crm_lead_reject_wizard_view_form" model="ir.ui.view">
        <field name="name">crm.lead.reject.wizard.view.form</field>
        <field name="model">crm.lead.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Lead Form">
                <sheet>
                    <group class="oe_title">
                        <field name="reject_reason_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="reject" string="Reject" type="object" class="btn btn-sm btn-primary"/>
                    <button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>